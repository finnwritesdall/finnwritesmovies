<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/css/style.css">
	<script src="https://kit.fontawesome.com/a57d21e331.js" crossorigin="anonymous"></script>
	<script type='text/javascript' src='https://storage.ko-fi.com/cdn/widget/Widget_2.js'></script>
    <title>{{ metadata.title }} / {{ title }}</title>
  </head>
  <body>
      <header class="header-title">
              <h1><a href="/">{{ metadata.title | upper }}</a></h1>
              <nav>
                  <ul>
                    <li><a href="/about/">About</a></li>
                    <li><a href="/support/">Support</a></li>
                    <li><a href="/contact/">Contact</a></li>
                    <li><a href="/rss-signup/">RSS Feed</a></li>
                    <li><a href="/posts/">Posts</a></li>
                  </ul>
              </nav>
      </header>
    <main>
      {{ content | safe }}
    </main>
    <footer>
        <div class="tip"><script type='text/javascript'>kofiwidget2.init('Keep the site running!', ' #6377b4', 'E1E01H5L4I');kofiwidget2.draw();</script></div>
        <ul>
            <li><a href="{{ metadata.link.letterboxd }}"><i class="fa-brands fa-square-letterboxd"></i></a></li>
            <li><a href="{{ metadata.link.bluesky }}"><i class="fa-brands fa-square-bluesky"></i></a></li>
            <li><a href="{{ metadata.link.instagram }}"><i class="fa-brands fa-square-instagram"></i></a></li>
        </ul>
        <div class="made-with">
            <h3 class="faded-normal">Made with <i class="fa-solid fa-heart"></i></h3>
            <h3 class="faded-normal">by <em>Me</em></h3>
        </div>
    </footer>
  </body>
</html>
