<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-image" href="/images/my-favicon/favicon.ico">
	  <link rel="stylesheet" href="/css/style.css">
	  <script src="https://kit.fontawesome.com/a57d21e331.js" crossorigin="anonymous"></script>
    <title> {{ title }}/ {{ metadata.title }}</title>
    <script type='text/javascript' src='https://storage.ko-fi.com/cdn/widget/Widget_2.js'></script>
  </head>
  <body>
      <header class="header-title">
              <h1><a href="/">{{ metadata.title | upper }}</a></h1>
              <nav>
                  <ul>
                    <li><a href="/about/">About</a></li>
                    <li><a href="/feed.xml">RSS Feed</a></li>
                  </ul>
              </nav>
      </header>
    <main>
      {{ content | safe }}
    </main>
    <footer>
        <h3 class="faded-normal heart">=== <i class="fa-solid fa-heart"></i> ===</h3>
        <div class="tip">
            <script type='text/javascript'>kofiwidget2.init('Support the site!', '#6377b4', 'E1E01H5L4I');kofiwidget2.draw();</script>
        </div>
        <ul>
            <li><a href="{{ metadata.link.letterboxd }}"><i class="fa-brands fa-square-letterboxd"></i></a></li>
            <li><a href="{{ metadata.link.bluesky }}"><i class="fa-brands fa-square-bluesky"></i></a></li>
            <li><a href="{{ metadata.link.instagram }}"><i class="fa-brands fa-square-instagram"></i></a></li>
        </ul>
    </footer>
  </body>
</html>
